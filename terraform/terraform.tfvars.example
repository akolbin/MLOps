# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# Basic Configuration
aws_region   = "us-east-1"
project_name = "mlops-showcase"

# SageMaker Configuration
sklearn_image_uri               = "246618743249.dkr.ecr.us-east-1.amazonaws.com/sagemaker-scikit-learn:1.2-1-cpu-py3"
serverless_memory_size          = 2048
serverless_max_concurrency      = 1
data_capture_sampling_percentage = 100

# Monitoring Configuration
latency_threshold_ms  = 5000
error_rate_threshold  = 5
alert_email          = ""  # Optional: your-email@example.com
drift_check_schedule = "rate(1 day)"